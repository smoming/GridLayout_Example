	<ContentPage.Content>
		<Grid Margin="40">
			<Grid.RowDefinitions>
				<RowDefinition Height="2*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Label x:Name="PhoneNumber" Text="" TextColor="White" FontSize="50" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="0" Grid.ColumnSpan="3" />

			<Button Text="1" BackgroundColor="White" FontSize="25" FontAttributes="Bold" TextColor="#2F4F4F" BorderRadius="15" Grid.Row="1" Grid.Column="0" Clicked="Handle_Clicked" />
			<Button Text="2" BackgroundColor="White" FontSize="25" FontAttributes="Bold" TextColor="#2F4F4F" BorderRadius="15" Grid.Row="1" Grid.Column="1" Clicked="Handle_Clicked" />
			<Button Text="3" BackgroundColor="White" FontSize="25" FontAttributes="Bold" TextColor="#2F4F4F" BorderRadius="15" Grid.Row="1" Grid.Column="2" Clicked="Handle_Clicked" />

			<Button Text="4" BackgroundColor="White" FontSize="25" FontAttributes="Bold" TextColor="#2F4F4F" BorderRadius="15" Grid.Row="2" Grid.Column="0" Clicked="Handle_Clicked" />
			<Button Text="5" BackgroundColor="White" FontSize="25" FontAttributes="Bold" TextColor="#2F4F4F" BorderRadius="15" Grid.Row="2" Grid.Column="1" Clicked="Handle_Clicked" />
			<Button Text="6" BackgroundColor="White" FontSize="25" FontAttributes="Bold" TextColor="#2F4F4F" BorderRadius="15" Grid.Row="2" Grid.Column="2" Clicked="Handle_Clicked" />

			<Button Text="7" BackgroundColor="White" FontSize="25" FontAttributes="Bold" TextColor="#2F4F4F" BorderRadius="15" Grid.Row="3" Grid.Column="0" Clicked="Handle_Clicked" />
			<Button Text="8" BackgroundColor="White" FontSize="25" FontAttributes="Bold" TextColor="#2F4F4F" BorderRadius="15" Grid.Row="3" Grid.Column="1" Clicked="Handle_Clicked" />
			<Button Text="9" BackgroundColor="White" FontSize="25" FontAttributes="Bold" TextColor="#2F4F4F" BorderRadius="15" Grid.Row="3" Grid.Column="2" Clicked="Handle_Clicked" />

			<Button Text="0" BackgroundColor="White" FontSize="25" FontAttributes="Bold" TextColor="#2F4F4F" BorderRadius="15" Grid.Row="4" Grid.Column="1" Clicked="Handle_Clicked" />

			<Button Text="撥號" BackgroundColor="#8FBC8F" FontSize="25" FontAttributes="Bold" TextColor="#2F4F4F" BorderRadius="15" Grid.Row="5" Grid.ColumnSpan="3" Clicked="Dial_Clicked" />
		</Grid>
	</ContentPage.Content>

